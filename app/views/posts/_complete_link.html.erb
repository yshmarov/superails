<%= content_tag :div, id: "complete-#{post.id}" do %>
  <%= link_to complete_post_path(post), method: :patch, remote: true do %>
    <% if current_user&.voted_up_on? post, vote_scope: 'watchlist' %>
      <i class="far fa-check-square text-success"></i>
    <% else %>
      <i class="far fa-check-square text-secondary"></i>
    <% end %>
  <% end %>
<% end %>