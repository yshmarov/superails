<%= render 'posts/post', post: @post %>

<div style="padding:66.67% 0 0 0;position:relative;">
  <iframe src="https://player.vimeo.com/video/<%= @post.description %>?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479&amp;h=696765de8b" 
    frameborder="0" 
    allow="autoplay; fullscreen; picture-in-picture"
    allowfullscreen 
    style="position:absolute;top:0;left:0;width:100%;height:100%;" 
    title="12 stripe course promo shoplify and saasblog">
  </iframe>
</div>
<script src="https://player.vimeo.com/api/player.js">
</script>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      Upvoters:
      <br>
      <%= @post.get_upvotes(vote_scope: 'like').by_type(User).voters.pluck(:email) %>
    </div>
    <div class="col-md-6">
      Downvoters:
      <br>
      <%= @post.get_downvotes(vote_scope: 'like').by_type(User).voters.pluck(:email) %>
    </div>
  </div>
</div>

<hr>
Comments:
<%= @comments.count %>
<br>
<%= link_to 'Add Comment', new_post_comment_path(@commentable) %>
<%= render template: 'comments/new' %>
<br>
<%= render @comments %>