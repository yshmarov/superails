<header id="header" class="header">
  <nav class="bg-white shadow-lg">
    <div class="container flex flex-wrap items-center justify-between px-2 py-3 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl">
      <div class="relative flex items-center justify-center justify-between w-3/12 lg:w-auto lg:static lg:block lg:justify-start lg:w-2/12">
        <%= link_to root_path, class:"flex items-center space-x-3" do %>
          <%= image_tag "favicon.ico", height: "20", alt: "logo", class: "inline-block align-top" %>
          <h1 class="ml-1 text-2xl font-extrabold tracking-wide text-indigo-800 uppercase">SupeRails</h1>
        <% end %>
      </div>
      <div class="relative flex-row flex-wrap items-center justify-center flex-grow w-9/12 h-full mr-0 lg:flex group lg:w-7/12">
        <ul class="flex items-center space-x-8 list-none lg:flex-row lg:ml-auto">
            <%= render navigation_links_partial_path %>
        </ul>
      </div>
    </div>
  </nav>
</header>





<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <%= image_tag "favicon.ico", height: "30", alt: "logo", class: "d-inline-block align-top" %>
      <b>SupeRails</b>
    </a>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%= deep_active_link_to pricing_path do %>
          <i class="fa fa-shopping-cart"></i>
          Pricing
        <% end %>
        <%= deep_active_link_to posts_path do %>
          <i class="fa fa-gem"></i>
          Posts
        <% end %>
        <% if current_user %>
          <%= link_to "Manage Billing", billing_portal_create_path, method: :post, data: { disable_with: "validating..."}, class: 'nav-link' %>
          <%= deep_active_link_to new_post_path do %>
            <i class="fa fa-plus"></i>
            New Post
          <% end %>
          <%= deep_active_link_to users_path do %>
            <i class="fa fa-users"></i>
            Users
          <% end %>
          <%= deep_active_link_to new_user_invitation_path do %>
            <i class="fa fa-user-plus"></i>
            Invite friend
          <% end %>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= render AvatarComponent.new(src: current_user.image, alt: current_user.name, display: current_user.image?) %>
              <b><%= current_user.username %></b>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
              <%= deep_active_link_to_dropdown_item user_path(current_user) do %>
                <i class="fa fa-user"></i>
                <b>My Profile</b>
              <% end %>
              <%= deep_active_link_to_dropdown_item edit_user_registration_path do %>
                <i class="fa fa-cog"></i>
                <b>Account settings</b>
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                <i class="fa fa-sign-out-alt"></i>
                <b>Sign out</b>
              <% end %>
            </ul>
          </li>
        <% else %>
          <%= active_link_to "Log in", new_user_session_path %>
          <%= active_link_to "Sign up", new_user_registration_path %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>



